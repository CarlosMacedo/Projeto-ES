<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prontuario.controller.EditarDadosAdminController">
   <center>
      <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Novo login:" />
            <TextField fx:id="txNovoLogin" />
            <Label text="Nova senha:" />
            <PasswordField fx:id="txNovaSenha" />
            <Label text="Repita a nova senha:" />
            <PasswordField fx:id="txRepitaSenha" />
         </children>
         <padding>
            <Insets left="150.0" right="150.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <Button mnemonicParsing="false" onAction="#confirmar" text="Confirmar" />
          <Button mnemonicParsing="false" onAction="#fechar" text="Fechar" />
        </items>
      </ToolBar>
   </bottom>
   <top>
      <Label text="Editando conta" BorderPane.alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
   </top>
</BorderPane>
